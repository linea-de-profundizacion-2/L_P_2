    </servlet>
    <servlet-mapping>
        <servlet-name>ingreso</servlet-name>
        <url-pattern>ingreso</url-pattern>
    </servlet-mapping> -->
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
